<odoo>
    <data>

        <record model="ir.ui.view" id="bar_app.line_form_cooker">
            <field name="name">Cooker line</field>
            <field name="model">bar_app.line_model</field>
            <field name="arch" type="xml">

                <form>
                    <header>
                        <button name="stateToDone" type="object" string="Product doned" class="oe_highlight" confirm="Is the produuct really doned?"></button>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group name="father_group">
                            <group name="left_group">
                                <field name="product_id"/>
                                <field name="order_id" />
                            </group>
                            <group name="right_group">
                                <field name="quantity"/>
                                <field name="observations"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="bar_app.line_tree_cooker">
            <field name="name">Cooker line</field>
            <field name="model">bar_app.line_model</field>
            <field name="arch" type="xml">

                <tree decoration-danger="state == 'O'">
                    <field name="fullName" />
                    <field name="observations" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="bar_app.action_window_lines_list_cooker">
            <field name="name">Lines cooker</field>
            <field name="res_model">bar_app.line_model</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('product_id.category.location','=','K'),('state','=','O'),('order_id.state','=','A')]</field>
        </record>
    </data>
</odoo>