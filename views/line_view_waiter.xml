<odoo>
    <data>

        <record model="ir.ui.view" id="bar_app.line_form_waiter">
            <field name="name">Waiter form</field>
            <field name="model">bar_app.line_model</field>
            <field name="arch" type="xml">

                <form>
                    <header>
                        <button name="stateToFinished" type="object" string="Delivered" class="oe_highlight" confirm="Is the product picked up and delivered?"></button>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group name="father_group">
                            <group name="left_group">
                                <field name="product_id"/>
                                <field name="order_id" />
                            </group>
                            <group name="right_group">
                                <field name="quantity"/>
                                <field name="observations"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="bar_app.line_tree_waiter">
            <field name="name">Waiter line</field>
            <field name="model">bar_app.line_model</field>
            <field name="arch" type="xml">

                <tree decoration-success="state == 'D'">
                    <field name="fullName" />
                    <field name="observations" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="bar_app.action_window_lines_list_waiter">
            <field name="name">Lines waiter</field>
            <field name="res_model">bar_app.line_model</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','D'),('order_id.state','=','A')]</field>
        </record>
    </data>
</odoo>