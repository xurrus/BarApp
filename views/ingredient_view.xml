<odoo>
    <data>
        <record model="ir.ui.view" id="bar_app.ingredient_form">
            <field name="name">Ingredient form</field>

            <field name="model">bar_app.ingredient_model</field>

            <field name="arch" type="xml">

                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="typeI"/>
                            <field name="observations"/>
                            <field name="products">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>
        <record model="ir.ui.view" id="bar_app.ingredient_model_tree">
            <field name="name">Ingredients List</field>

            <field name="model">bar_app.ingredient_model</field>

            <field name="arch" type="xml">

                <tree>

                    <field name="name"/>

                    <field name="typeI"/>


                </tree>

            </field>
        </record>
        <record model="ir.actions.act_window" id="bar_app.action_window_ingredients_list">
            <field name="name">Ingredients list</field>
            <field name="res_model">bar_app.ingredient_model</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>