<odoo>
    <data>
        <record model="ir.ui.view" id="bar_app.category_form">
            <field name="name">Category form</field>

            <field name="model">bar_app.category_model</field>

            <field name="arch" type="xml">

                <form>

                    <sheet>

                        <group>

                            <field name="name" />

                            <field name="products" />

                        </group>

                    </sheet>

                </form>

            </field>
        </record>
        <record model="ir.ui.view" id="bar_app.category_model_tree">
            <field name="name">Categories List</field>

            <field name="model">bar_app.category_model</field>

            <field name="arch" type="xml">

                <tree>

                    <field name="name" />

                    <field name="products" />

                </tree>

            </field>
        </record>
        <record model="ir.actions.act_window" id="bar_app.action_window_categories_list">
            <field name="name">Categories List</field>
            <field name="res_model">bar_app.category_model</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>